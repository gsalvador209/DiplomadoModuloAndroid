<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_black"
    tools:context=".exercise.home.ivanusielrj.exercise2.UsielHomeMainActivityExerciseTwo">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercent"
        app:layout_constraintGuide_percent=".5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageButton
        android:id="@+id/ibReturn"
        app:layout_constraintEnd_toStartOf="@id/glEnd"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:elevation="50dp"
        android:src="@drawable/img_btn_home"
        android:scaleType="fitCenter"
        android:background="@color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/ivTiktok"
        android:src="@drawable/img_astro_banner"
        app:layout_constraintStart_toEndOf="@+id/glStart"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintTop_toBottomOf="@+id/ibReturn"
        android:layout_width="0dp"
        android:layout_height="400dp"/>

    <Button
        android:id="@+id/btnFrameLayout"
        android:text="Frame Layout"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#000"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/glPercent"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintBottom_toTopOf="@+id/btnLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"/>

    <Button
        android:id="@+id/btnLinearLayout"
        android:text="Linear Layout"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#000"
        app:layout_constraintTop_toBottomOf="@id/btnFrameLayout"
        app:layout_constraintStart_toEndOf="@id/glStart"
        app:layout_constraintBottom_toTopOf="@id/btnRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"/>
    <Button
        android:id="@+id/btnRelativeLayout"
        android:text="Relative Layout"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#000"
        app:layout_constraintTop_toBottomOf="@id/btnLinearLayout"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintBottom_toTopOf="@id/btnConstrainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"/>

    <Button
        android:id="@+id/btnConstrainLayout"
        android:text="Constrain Layout"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#000"
        app:layout_constraintTop_toBottomOf="@id/btnRelativeLayout"
        app:layout_constraintStart_toEndOf="@id/glStart"
        app:layout_constraintBottom_toTopOf="@id/btnReciclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"/>

    <Button
        android:id="@+id/btnReciclerView"
        android:text="Recicler View"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#000"
        app:layout_constraintTop_toBottomOf="@id/btnConstrainLayout"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintBottom_toTopOf="@+id/btnComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"/>

    <Button
        android:id="@+id/btnComponent"
        android:text="Activity Component"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#000"
        app:layout_constraintTop_toBottomOf="@id/btnConstrainLayout"
        app:layout_constraintStart_toEndOf="@id/glStart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>