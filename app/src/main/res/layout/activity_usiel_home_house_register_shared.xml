<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_pink"
    tools:context=".exercise.home.ivanusielrj.homework1.UsielHomeHouseRegisterActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercent"
        app:layout_constraintGuide_percent=".25"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/ibReturn"
        app:layout_constraintEnd_toStartOf="@id/glStart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:elevation="70dp"
        android:src="@drawable/img_backhome"
        android:scaleType="fitCenter"
        android:background="@drawable/img_backhome"
        android:layout_width="40dp"
        android:layout_height="40dp"/>


    <ImageView
        android:id="@+id/ivBannerHome"
        android:src="@drawable/img_house_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glPercent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="700dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/tvHomeRegister"
        android:text="Hogar"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toStartOf="@+id/tvHomeRegister2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#f4f4f4"
        android:shadowColor="#fe9898"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pacificoregular"/>

    <TextView
        android:id="@+id/tvHomeRegister2"
        android:text="Market"
        app:layout_constraintStart_toEndOf="@id/tvHomeRegister"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#f4f4f4"
        android:shadowColor="#cb6ce6"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pacificoregular"/>

    <Button
        android:id="@+id/btnRegisterHouse"
        android:text="Registrar Casa"
        android:textColor="#f4f4f4"
        android:textSize="18sp"
        android:backgroundTint="#cb6ce6"
        app:layout_constraintTop_toBottomOf="@id/tvHomeRegister"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintBottom_toBottomOf="@id/glPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:fontFamily="@font/pacificoregular"/>

</androidx.constraintlayout.widget.ConstraintLayout>