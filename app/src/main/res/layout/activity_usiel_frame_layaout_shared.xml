<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_stars"
    tools:context=".exercise.home.ivanusielrj.exercise2.UsielFrameLayaoutActivity">

    <TextView
        android:textColor="#FFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="15sp"
        android:text="Imagen Gravity top | end "
        android:layout_marginTop="100dp"
        android:layout_gravity="start|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:src="@drawable/img_astro_1"
        android:layout_gravity="end|top"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"/>

    <TextView
        android:textColor="#FFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="15sp"
        android:background="@color/black"
        android:layout_gravity="center|start"
        android:text="Imagen Gravity center | end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <ImageView
        android:src="@drawable/img_astro_2"
        android:layout_gravity="center|end"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"/>

    <TextView
        android:textColor="#FFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="15sp"
        android:background="@color/black"
        android:layout_gravity="bottom|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Imagen Gravity bottom | end"/>

    <ImageView
        android:src="@drawable/img_astro_3"
        android:layout_gravity="bottom|end"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"/>


    <ImageButton
        android:id="@+id/ibReturn"
        app:layout_constraintEnd_toStartOf="@id/gEnd"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:elevation="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/img_btn_return"
        android:scaleType="fitCenter"
        android:background="@color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</FrameLayout>