<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise.home.alexisescalona.exercise2.AlexisHomeActivity">

    <Button
        android:id="@+id/btnFrameLayout"
        android:text="1) Frame Layout"
        android:backgroundTint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnLinearLayout"
        android:text="2) Linear Layout"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="@id/btnFrameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRelativeLayout"
        android:text="3) Relative Layout"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="@id/btnLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnConstraintLayout"
        android:text="4) Constraint Layout"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="@id/btnRelativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnComponents"
        android:text="5) Components"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="@id/btnConstraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRecyclerView"
        android:text="6) RecyclerView"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="@id/btnComponents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>