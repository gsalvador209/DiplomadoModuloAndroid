<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise.home.alexisescalona.exercise1.AlexisHomeActivity">

    <Button
        android:id="@+id/btnLifeCycle"
        android:text="1) Life Cycle Activity"
        android:backgroundTint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnImplicitIntent"
        android:text="2) Implicit Intent Activity"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="@id/btnLifeCycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSendParameters"
        android:text="3) Send Parameters Activity"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="@id/btnImplicitIntent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>