<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise.home.salvadorchavez.Exercise2.ChavaRelativeLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/chava_album_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay"/>
    </FrameLayout>

    <ImageButton
        android:id="@+id/btnBackMusic"
        android:src="@drawable/outline_arrow_back_2_24"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_margin="30dp"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSongName"
        android:text="Moldes - NSKQ"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_above="@id/ivControlBar"
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCurrentTime"
        android:text="2:38"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/ivControlBar"
        android:layout_above="@id/ivPlay"
        android:layout_marginBottom="36dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivControlBar"
        android:src="@drawable/barra_musica"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ivPlay"
        android:layout_marginBottom="40dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tvDuration"
        android:text="3:53"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/ivControlBar"
        android:layout_above="@id/ivPlay"
        android:layout_marginBottom="36dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivPlay"
        android:scaleY="2"
        android:scaleX="2"
        android:src="@drawable/pause_circle_24dp_e8eaed_fill0_wght400_grad0_opsz24"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivNext"
        android:scaleY="2"
        android:scaleX="2"
        android:src="@drawable/skip_song"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/ivPlay"
        android:layout_marginBottom="45dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivPrev"
        android:scaleY="2"
        android:scaleX="2"
        android:src="@drawable/previous_song"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/ivPlay"
        android:layout_marginBottom="45dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
