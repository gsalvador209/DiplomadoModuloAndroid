<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise.classroom.graphiccomponent.ChavaRelativeLayout">

    <TextView
        android:text="Ingresa tus datos"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/secondary_text_light_nodisable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etChavaUser"
        android:hint="Ingresa tu usuario"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etChavaPassword"
        android:layout_below="@id/etChavaUser"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:hint="Ingresa tu contraseña"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="24dp"
        android:text="Iniciar sesión"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>