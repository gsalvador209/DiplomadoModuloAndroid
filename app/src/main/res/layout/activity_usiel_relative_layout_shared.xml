<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_stars"
    tools:context=".exercise.home.ivanusielrj.exercise2.UsielRelativeLayoutActivity">

    <ImageButton
        android:id="@+id/ibReturn"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:elevation="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/img_btn_return"
        android:scaleType="fitCenter"
        android:background="@color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:textColor="#FFF"
        android:shadowColor="#c8f023"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="25sp"
        android:text="Ingrese datos"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="#FFFF"
        android:id="@+id/etUser"
        android:hint="Ingresa Usario"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"/>

    <EditText
        android:textColor="#FFFF"
        android:id="@+id/etPassword"
        android:hint="Ingresa ContraseÃ±a"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"/>

    <Button
        android:text="Entrar"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#c8f023"
        />

</RelativeLayout>