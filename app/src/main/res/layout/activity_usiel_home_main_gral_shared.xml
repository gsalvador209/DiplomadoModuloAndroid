<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_purple"
    tools:context=".exercise.home.ivanusielrj.UsielHomeMainGralActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercent"
        app:layout_constraintGuide_percent=".5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/ibReturn"
        app:layout_constraintEnd_toStartOf="@id/glEnd"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:elevation="50dp"
        android:src="@drawable/img_btn_home"
        android:scaleType="fitCenter"
        android:background="@color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <Button
        android:id="@+id/btnFirstExercise"
        android:text="1er ejercicio"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#5b49c9"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ibReturn"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pressstart2p"/>

    <Button
        android:id="@+id/btnSecondExercise"
        android:text="2do ejercicio"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#5b49c9"
        app:layout_constraintTop_toBottomOf="@id/btnFirstExercise"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/black"
        android:fontFamily="@font/pressstart2p"/>

    <Button
        android:id="@+id/btnHomework"
        android:text="Tarea"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        android:backgroundTint="#5b49c9"
        app:layout_constraintTop_toBottomOf="@id/btnSecondExercise"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pressstart2p"/>


    <ImageView
        android:id="@+id/ivAstro"
        android:src="@drawable/img_astro_footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glPercent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_width="700dp"
        android:layout_height="0dp"
        />

    <TextView
        android:id="@+id/tvHomeName"
        android:text="Iván Usiel Ramírez Jarquín"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FFF"
        android:shadowColor="#29d6d4"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:fontFamily="@font/pressstart2p"/>
    <TextView
        android:id="@+id/tvHomeDiplo"
        android:text="Desarrollo de Apps Android con Kotlin"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toStartOf="@+id/glEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#FFF"
        android:shadowColor="#29d6d4"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:fontFamily="@font/pressstart2p"/>

</androidx.constraintlayout.widget.ConstraintLayout>