<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_stars"
    tools:context=".exercise.home.ivanusielrj.exercise2.UsielLinearLayoutActivity">

    <ImageButton
        android:id="@+id/ibReturn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:elevation="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/img_btn_return"
        android:scaleType="fitCenter"
        android:background="@color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_astro_3"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:contentDescription="User Profile Image"/>

    <TextView
        android:textColor="#FFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="24sp"
        android:text="Iván Usiel Ramírez Jarquín"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:textColor="#FFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="15sp"
        android:text=" Universidad Nacional Autónoma de México"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/background_gradient_black"
        android:layout_marginBottom="24dp"
        android:padding="12dp"/>

    <TextView
        android:textColor="#FFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="15sp"
        android:text="usiel_jarquin@outlook.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:background="@drawable/background_gradient_black"
        android:padding="12dp"/>

    <TextView
        android:textColor="#FFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="15sp"
        android:text="Teléfono: 554367b 3355"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_gradient_black"
        android:padding="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnEditProfile"
            android:text="Editar Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#c8f023"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnSettings"
            android:text="Configuración"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#c8f023"
            android:textColor="#000"
            android:padding="12dp"/>
    </LinearLayout>

</LinearLayout>